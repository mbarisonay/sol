@model IEnumerable<user_panel.ViewModels.BookingViewModel>

<style>
    .table-dark-custom th {
        color: white;
    }

    .table-dark-custom td:not(:last-child) {
        color: white;
    }
</style>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container container-main-large">
    <div class="card-custom">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <p class="text-center text-muted mb-4">Here is a list of all your past and upcoming reservations (Times are shown in Turkey Time Zone).</p>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-dark-custom">
                    <thead>
                        <tr>
                            <th>Location</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Total Price</th>
                            <th class="text-center">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.CabinLocation</td>
                                <!--
                                    THE FIX IS HERE: We remove .ToLocalTime()
                                    because the time is already correct.
                                -->
                                <td>@booking.StartTime.ToString("g")</td>
                                <td>@booking.EndTime.ToString("g")</td>
                                <td>@booking.TotalPrice.ToString("C")</td>
                                <td class="text-center">
                                    <span class="badge rounded-pill @booking.StatusBadgeClass">
                                        @booking.CurrentStatus
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                You have no bookings yet. <a asp-action="Index" asp-controller="Booking" class="alert-link">Why not make one?</a>
            </div>
        }
    </div>
</div>