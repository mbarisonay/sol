@using Microsoft.AspNetCore.Identity
@using user_panel.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" /> <!-- DEĞİŞTİ: utf-g -> utf-8 olarak düzeltildi. -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sports Cabin</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<!-- YENİ: Kullanıcı giriş yapmışsa, body etiketine onun ID'sini ekliyoruz. JavaScript buradan okuyacak. -->
<body data-user-id="@(User.Identity.IsAuthenticated? UserManager.GetUserId(User) : "")">

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark fixed-top box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SportsCabin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var isAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
                            if (isAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                                </li>
                            }
                            <!-- Scan QR butonu modal'ı tetiklemek için doğru şekilde ayarlandı. -->
                            <li class="nav-item">
                                <button type="button" class="nav-link fw-bold btn btn-link" data-bs-toggle="modal" data-bs-target="#qrScannerModal">Scan QR</button>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- QR Scanner Modal -->
    <div class="modal fade" id="qrScannerModal" tabindex="-1" aria-labelledby="qrScannerModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark text-light">
                <!-- DEĞİŞTİ: Modal'ın görünümü tema ile uyumlu hale getirildi. -->
                <div class="modal-header border-secondary">
                    <h5 class="modal-title" id="qrScannerModalLabel">Scan Cabin QR Code</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="qr-reader" style="width: 100%;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- QR Result Modal -->
    <div class="modal fade" id="qrResultModal" tabindex="-1" aria-labelledby="qrResultModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark text-light">
                <!-- DEĞİŞTİ: Modal'ın görünümü tema ile uyumlu hale getirildi. -->
                <div class="modal-header border-secondary">
                    <h5 class="modal-title" id="qrResultModalLabel">Access Status</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- DEĞİŞTİ: `qrResultData` ID'li element `qrResultText` olarak değiştirildi (JavaScript ile uyumlu olması için). -->
                    <p id="qrResultText" class="lead text-center"></p>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    <footer class="footer text-muted">
        <div class="container">
            © 2024 - Sports Cabin Software
        </div>
    </footer>

    <!-- CORE SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- YENİ: FIREBASE SDK SCRIPTS -->
