        <!-- QR SCANNER SCRIPTS -->
        <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
    <script src="~/js/global-qr-handler.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>